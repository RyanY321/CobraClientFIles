<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
  <runtime>
    <ThrowUnobservedTaskExceptions enabled="true" />
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="CommonServiceLocator" publicKeyToken="489b6accfaf20ef0" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.0.6.0" newVersion="2.0.6.0" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Microsoft.Bcl.AsyncInterfaces" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-13.0.0.0" newVersion="13.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Buffers" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.3.0" newVersion="4.0.3.0" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Numerics.Vectors" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.1.4.0" newVersion="4.1.4.0" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-6.0.0.0" newVersion="6.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.Threading.Tasks.Extensions" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.2.0.1" newVersion="4.2.0.1" />
      </dependentAssembly>
    </assemblyBinding>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="System.ValueTuple" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.3.0" newVersion="4.0.3.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">
    <include file="hsscp-nlog-*.config" ignoreErrors="true" />
    <variable name="xcptLayout" value="${onexception:inner=${newline}${exception:format=ToString}" />
    <variable name="appLayout" value="${time}|${level:format=FirstCharacter}|[${pad:padding=2:padCharacter=0:inner=${threadid}}]|${logger:shortName=true}|${message}${all-event-properties}${xcptLayout}" />
    <variable name="fx" value="${specialfolder:folder=CommonApplicationData}\${gdc:item=product}\user\logs\hsscp.${assembly-version}.${shortdate}" />
    <variable name="maxFileSize" value="209715200" />
    <targets async="true">
      <target name="app" xsi:type="SplitGroup">
        <target xsi:type="File" encoding="utf-8" layout="[${processid}]|${appLayout}" fileName="${fx}.log" maxArchiveFiles="1" archiveAboveSize="${maxFileSize}" archiveEvery="Day" concurrentWrites="true" />
        <target xsi:type="File" encoding="utf-8" fileName="${fx}.jlog" maxArchiveFiles="1" archiveAboveSize="${maxFileSize}" archiveEvery="Day" concurrentWrites="true">
          <layout xsi:type="JsonLayout" includeAllProperties="true">
            <attribute name="time" layout="${longdate}" />
            <attribute name="level" layout="${level:upperCase=true}" />
            <attribute name="thread" layout="${threadName}" />
            <attribute name="threadId" layout="${threadId}" />
            <attribute name="logger" layout="${logger}" />
            <attribute name="user" layout="${windows-identity}" />
            <!-- <attribute name="identity" layout="${identity}" /> -->
            <!-- <attribute name="host" layout="${machinename}" /> -->
            <!-- <attribute name="class" layout="${callsite:classname=true:includesourcepath=false:methodName=false}" /> -->
            <attribute name="method" layout="${callsite:classname=false:includesourcepath=false:methodName=true}" />
            <!-- <attribute name="file" layout="${callsite:classname=false:filename=true:includesourcepath=true:methodName=false}" /> -->
            <!-- <attribute name="line" layout="${callsite-linenumber}" /> -->
            <attribute name="domain" layout="${processname}" />
            <attribute name="processId" layout="${processid}" />
            <attribute name="message" layout="${message}" />
            <attribute name="exception" layout="${exception:format=ToString}" />
            <!-- <attribute name="ndc" layout="${ndc}" /> -->
            <!-- <attribute name="mdc" layout="${mdc:item=clientid}" /> -->
          </layout>
        </target>
      </target>
    </targets>
    <rules>
      <logger name="System.*" minlevel="Error" writeTo="app" final="true" />
      <logger name="Hss.Client.*" minlevel="Info" writeTo="app" final="true" />
      <logger name="Hss.*" minlevel="Error" writeTo="app" final="true" />
      <logger name="HSSCP.*" minlevel="Info" writeTo="app" final="true" />
      <logger name="Foundation.*" minlevel="Warn" writeTo="app" final="true" />
    </rules>
  </nlog>
</configuration>